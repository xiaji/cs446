<h1>Listing cats</h1>

<table>
<% @cats.each do |cat| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(cat.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= cat.name %>, <%= cat.breed %>,  <%= cat.age %>, <%= cat.gender %></dt>
        <dd><%= truncate(strip_tags(cat.description), length: 120) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', cat %><br/>
      <%= link_to 'Edit', edit_cat_path(cat) %><br/>
      <%= link_to 'Destroy', cat, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Cat', new_cat_path %>
