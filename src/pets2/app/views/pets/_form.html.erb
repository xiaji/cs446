<%= form_for(@pet) do |f| %>
<% if @pet.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@pet.errors.count, "error") %>
    prohibited this pet from being saved:</h2>
    <ul>
      <% @pet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </div>
    <div class="field">
    <%= f.label :species %><br>
    <%= f.text_field :species %>
  </div>
  <div class="field">
    <%= f.label :breed %><br>
    <%= f.text_field :breed %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :habits %><br>
    <%= f.text_area :habits, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, Pet::VALID_STATUSES, prompt: 'Select a status' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>